<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="984.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.professorclaytonandrade.sistemaservicosjavafx.controller.ConsultaClienteController">
    <children>
        <VBox alignment="CENTER" prefHeight="380.0" prefWidth="580.0" spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <!-- Title Section -->
            <Label text="Consulta de Clientes" textAlignment="CENTER">
                <font>
                    <Font size="24" />
                </font>
            </Label>

            <!-- Table Section -->
            <TableView fx:id="tableView">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="id" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="nomeColumn" prefWidth="200.0" text="Nome">
                        <cellValueFactory>
                            <PropertyValueFactory property="nome" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email">
                        <cellValueFactory>
                            <PropertyValueFactory property="email" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="cpfColumn" prefWidth="150.0" text="CPF">
                        <cellValueFactory>
                            <PropertyValueFactory property="cpf" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="telefoneColumn" prefWidth="150.0" text="Telefone">
                        <cellValueFactory>
                            <PropertyValueFactory property="telefone" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="dataCriacaoColumn" prefWidth="100.0" text="Data Criação">
                        <cellValueFactory>
                            <PropertyValueFactory property="dataCriacao" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- Buttons Section -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="editarButton" onAction="#editar" prefHeight="25.0" prefWidth="80.0" text="Editar" />
                <Button fx:id="deletarButton" onAction="#deletar" prefHeight="25.0" prefWidth="80.0" text="Deletar" />
                <Button fx:id="voltarButton" onAction="#voltar" prefHeight="25.0" prefWidth="80.0" text="Voltar" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
